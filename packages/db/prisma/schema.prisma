// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums

enum SATProgressType {
  ENGLISH
  MATH
}

enum PortfolioStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
}

enum AdmitStatus {
  PENDING
  OFFERED
  ENROLLED
  REJECTED
}

// Core models

model Student {
  id                  String               @id @default(cuid())
  fullName            String
  slug                String               @unique
  academicYear        String
  createdAt           DateTime             @default(now())

  // Relations
  ieltsProgress       IELTSProgress[]
  satProgress         SATProgress[]
  portfolioProjects   PortfolioProject[]
  internationalAdmits InternationalAdmit[]
}

model IELTSProgress {
  id          String   @id @default(cuid())
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String

  startScore  Int
  currentScore Int
  targetScore Int

  createdAt   DateTime @default(now())
}

model SATProgress {
  id          String          @id @default(cuid())
  student     Student         @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String

  type        SATProgressType
  startScore  Int
  currentScore Int
  targetScore Int

  createdAt   DateTime        @default(now())
}

model PortfolioProject {
  id          String           @id @default(cuid())
  student     Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String

  title       String
  description String
  status      PortfolioStatus  @default(PLANNED)

  createdAt   DateTime         @default(now())
}

model InternationalAdmit {
  id          String      @id @default(cuid())
  student     Student     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String

  programName String
  country     String
  status      AdmitStatus @default(PENDING)

  createdAt   DateTime    @default(now())
}


